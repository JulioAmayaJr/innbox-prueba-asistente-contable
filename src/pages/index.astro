  <script>
    function toggleCaseBlocks() {
      const c1 = document.querySelector('input[name="caso_seleccionado"][value="caso1"]')?.checked;
      const c2 = document.querySelector('input[name="caso_seleccionado"][value="caso2"]')?.checked;
      const c3 = document.querySelector('input[name="caso_seleccionado"][value="caso3"]')?.checked;

      const b1 = document.getElementById('caso1_block');
      const b2 = document.getElementById('caso2_block');
      const b3 = document.getElementById('caso3_block');

      if (b1) b1.style.display = c1 ? 'block' : 'none';
      if (b2) b2.style.display = c2 ? 'block' : 'none';
      if (b3) b3.style.display = c3 ? 'block' : 'none';
    }

    function enforceMaxTwo(checkbox) {
      const all = Array.from(document.querySelectorAll('input[name="caso_seleccionado"]'));
      const checked = all.filter(cb => cb.checked);
      if (checked.length > 2) {
        checkbox.checked = false;
        alert('‚ö†Ô∏è Solo puede seleccionar 2 casos. Por favor, deseleccione uno antes de elegir otro.');
      }
    }

    function updateProgress() {
      const form = document.getElementById('evaluationForm');
      if (!form) return;

      const inputs = form.querySelectorAll('input[required], textarea[required], select[required]');
      let filled = 0;

      inputs.forEach(input => {
        if (input.type === 'checkbox' || input.type === 'radio') {
          const name = input.name;
          if (form.querySelector(`input[name="${name}"]:checked`)) filled++;
        } else if (input.value.trim() !== '') {
          filled++;
        }
      });

      const progress = (filled / inputs.length) * 100;
      const bar = document.getElementById('progressFill');
      if (bar) bar.style.width = progress + '%';
    }

    function autoSave() {
      const form = document.getElementById('evaluationForm');
      if (!form) return;

      const formData = new FormData(form);
      const data = {};
      for (let [key, value] of formData.entries()) data[key] = value;
      localStorage.setItem('evaluacionGuardada', JSON.stringify(data));
    }

    function loadSavedData() {
      const saved = localStorage.getItem('evaluacionGuardada');
      if (!saved) return;

      const data = JSON.parse(saved);
      Object.keys(data).forEach(key => {
        const nodes = document.querySelectorAll(`[name="${key}"]`);
        if (!nodes.length) return;

        nodes.forEach(el => {
          if (el.type === 'checkbox' || el.type === 'radio') {
            if (el.value === data[key]) el.checked = true;
          } else {
            el.value = data[key];
          }
        });
      });

      toggleCaseBlocks();
      updateProgress();
    }

    document.addEventListener('DOMContentLoaded', () => {
      loadSavedData();

      const caseCheckboxes = document.querySelectorAll('input[name="caso_seleccionado"]');
      caseCheckboxes.forEach(cb => {
        cb.addEventListener('change', (e) => {
          enforceMaxTwo(e.currentTarget);
          toggleCaseBlocks();
          updateProgress();
        });
      });

      setInterval(autoSave, 30000);

      const form = document.getElementById('evaluationForm');
      form.addEventListener('input', updateProgress);
      form.addEventListener('change', updateProgress);

      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const checked = document.querySelectorAll('input[name="caso_seleccionado"]:checked');
        if (checked.length !== 2) {
          alert('‚ö†Ô∏è Debe seleccionar exactamente 2 casos de la Secci√≥n 1.');
          return;
        }

        const formData = new FormData(form);
        const payload = {};
        for (let [key, value] of formData.entries()) {
          if (payload[key]) {
            payload[key] = Array.isArray(payload[key]) ? [...payload[key], value] : [payload[key], value];
          } else {
            payload[key] = value;
          }
        }

        const res = await fetch('/api/submit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        const out = await res.json();
        if (!res.ok) {
          alert(out?.message || 'Error enviando la prueba.');
          return;
        }

        alert('‚úÖ Prueba enviada exitosamente!\n\nRecibir√° una confirmaci√≥n por correo electr√≥nico.\n\nMuchas gracias por su tiempo.');
        localStorage.removeItem('evaluacionGuardada');
        form.reset();
        toggleCaseBlocks();
        updateProgress();
      });

      window.addEventListener('beforeunload', (e) => {
        const nameFilled = (document.querySelector('input[name="nombre"]')?.value || '') !== '';
        if (nameFilled) {
          autoSave();
          e.preventDefault();
          e.returnValue = '';
        }
      });

      toggleCaseBlocks();
      updateProgress();
    });
  </script>
